<%- include('./layouts/header.ejs') %>

    <style>
        body {
            background-color: rgb(175, 247, 240);
            margin-top: 30px;
          
        }

        h1 {
        
            font-size: 40px;
        }

        form input {
            width: 400px;
            margin: 7px;
            padding: 4px;
            border: 1px solid black;
            border-radius: 6px;
            outline: none;
            font-size: 16px;
        }

        .btn {
            width: 411px;
            margin: 7px;
            padding: 4px;
            background-color: rgb(188, 54, 54);
        }
    </style>


    <div class="container">
        <h1>Login</h1>

        <% 
        if(typeof message !== 'undefined'){
            %>
            <p style="color: brown;"><%= message %></p>
            <%
        }
        %>
            <form action="" method="POST">
                <div class="row">
                    <div class="col-sm-12">
                        <input type="email" name="name" placeholder="Enter Your Email" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <input type="password" name="password" placeholder="Enter Your Password" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <input type="submit" value="Login" class="btn">
                    </div>
                </div>
            </form>
    </div>



    <%- include('./layouts/footer.ejs') %>